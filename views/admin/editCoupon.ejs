<%- include('../partials/admin/adminHeader') %>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <title>Edit Category</title>
    
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.6.0/dist/css/bootstrap.min.css"
    />
    <style>
        body {
          font-family: Arial, sans-serif;
        }
    
        h1 {
          text-align: center;
          margin-top: 80px;
        }
    
        .coupon-form {
          width: 400px;
          margin: 0 auto;
          padding: 20px;
          border: 1px solid #ccc;
          border-radius: 5px;
          box-shadow: 0 0 5px #ccc;
        }
    
        label {
          display: block;
          margin-bottom: 5px;
          font-weight: bold;
        }
    
        input[type="text"], input[type="date"], input[type="number"] {
          width: 95%;
          padding: 10px;
          margin-bottom: 15px;
          border: 1px solid #ccc;
          border-radius: 5px;
        }
    
        button {
          background-color: #c91838;
          color: #fff;
          border: none;
          padding: 10px 20px;
          border-radius: 5px;
          cursor: pointer;
        }
      </style>

</head>

<body>

    <body>

        <div class="container">
            <h1>Edit Coupon</h1>
            <div class="coupon-form">
                <form action="/admin/update-coupon/<%= coupon._id %>" method="post">
                    <label for="couponCode" class="text-danger">Coupon Code:</label>
                    <input type="text" id="code" name="code" value="<%= coupon && coupon.couponCode %>" required>
                    <label for="expiryDate" class="text-danger">Expiry Date:</label>
                    <input type="date" id="expiryDate" name="expiryDate" value="<%= coupon && coupon.expiryDate ? coupon.expiryDate.toISOString().substr(0, 10) : '' %>" required>

   <label for="discountPercentage" class="text-danger">Discount Percentage:</label>
                    <select name="discountPercentage" id="discountPercentage" required>
                        <option value="10" <%= coupon && coupon.discountPercentage === 10 ? 'selected' : '' %>>10%</option>
                        <option value="20" <%= coupon && coupon.discountPercentage === 20 ? 'selected' : '' %>>20%</option>
                        <option value="30" <%= coupon && coupon.discountPercentage === 30 ? 'selected' : '' %>>30%</option>
                        <option value="40" <%= coupon && coupon.discountPercentage === 40 ? 'selected' : '' %>>40%</option>
                        <option value="50" <%= coupon && coupon.discountPercentage === 50 ? 'selected' : '' %>>50%</option>
                        <option value="60" <%= coupon && coupon.discountPercentage === 60 ? 'selected' : '' %>>60%</option>
                    </select>
    
                    <button type="submit" class="btn btn-danger">Update Coupon</button>
                </form>
            </div>
        </div>
    
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    

    
    <!-- Bootstrap JS and Popper.js -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- Add your script tags here, similar to the other HTML pages -->

</body>

</html>
