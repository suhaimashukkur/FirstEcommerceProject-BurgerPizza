<%- include('../partials/admin/adminHeader.ejs') %>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <title>Edit Category</title>
    <!-- Include Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.6.0/dist/css/bootstrap.min.css"
    />
    <style>
      body {
        font-family: 'Arial', sans-serif;
        background-color: #f5f5f5;
      }

      .container {
        max-width: 600px;
        margin: 50px auto;
        padding: 30px;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
      }

      h3 {
        
        text-align: center;
        margin-bottom: 30px;
      }

      label {
        font-weight: bold;
      }

      .form-control {
        margin-bottom: 20px;
      }

      .btn-danger {
        
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        
      

      }

      .btn-primary:hover {
        background-color: #14171a;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h3 ><spam class="text-danger">Edit</spam><spam>  </spam>Category</h3>

      <form onsubmit="return checkDuplicateCategory();" action="/admin/update-category/<%= category._id %>" method="post">
        <!-- Assuming you want to update the category name -->
        <div class="mb-3">
          <label for="category" class="form-label"></label>
          <input
            type="text"
            class="form-control"
            id="category"
            name="categoryName"
            value="<%= category.categoryName %>"
            placeholder="Category Name"
            required
          />
        </div>

        <button style="text-align: center;"    class="btn btn-danger" type="submit">Update</button>
      </form>
    </div>

    <!-- Include this script in your HTML file -->
    <script>
      // Function to check if the category name already exists
      function checkDuplicateCategory() {
        var categoryInput = document.getElementById('category');
        var existingCategories = []; // Add existing category names here
    
        if (existingCategories.includes(categoryInput.value)) {
          alert('Category name already exists. Please choose a different name.');
          return false; // Prevent form submission
        }
        return true; // Allow form submission
      }
    </script>


  </body>
</html>
