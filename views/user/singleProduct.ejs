<style>
  /* Reset some default styles */
body, h1, h2, h3, p, ul {
    margin: 0;
    padding: 0;
}

body {
    font-family: 'Arial', sans-serif;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
}

.header {
    background-color: #fff;
    border-bottom: 1px solid #ddd;
    padding: 20px 0;
}

.header__top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
}

.header__top ul {
    list-style: none;
    margin: 0;
    padding: 0;
}

.header__top__left li {
    display: inline-block;
    margin-right: 20px;
    font-size: 11px;
    color: #555;
}

.header__top__right__social a {
    margin-right: 10px;
    color: #555;
    font-size: 16px;
}

.header__top__right__language {
    position: relative;
    display: inline-block;
    margin-right: 20px;
}

.header__top__right__language img {
    width: 20px;
    height: auto;
    margin-right: 5px;
}

.header__top__right__language div {
    display: inline-block;
    margin-right: 5px;
    font-size: 14px;
    color: #555;
}

.header__top__right__language ul {
    position: absolute;
    top: 100%;
    left: 0;
    background-color: #fff;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    display: none;
}

.header__top__right__language:hover ul {
    display: block;
}

.header__top__right__language li {
    padding: 10px;
}

.header__top__right__auth a {
    color: #555;
    font-size: 14px;
}

.header__logo img {
    max-width: 100%;
}

.header__menu ul {
    list-style: none;
}

.header__menu ul li {
    display: inline-block;
    margin-right: 20px;
}

.header__menu ul li a {
    text-decoration: none;
    color: #555;
    font-size: 16px;
}

.header__cart ul {
    list-style: none;
    margin: 0;
    padding: 0;
}

.header__cart ul li {
    display: inline-block;
    margin-right: 20px;
}

.header__cart__price {
    font-size: 16px;
    color: #555;
}

/* Mobile styles for the hamburger menu */
.humberger__open {
    display: none;
    cursor: pointer;
}

@media only screen and (max-width: 768px) {
    .header__top {
        flex-direction: column;
        align-items: flex-start;
    }

    .header__top__right {
        margin-top: 15px;
    }

    .header__menu {
        display: none;
        margin-top: 20px;
    }

    .humberger__open {
        display: block;
        font-size: 20px;
        color: #555;
    }
}

</style>




