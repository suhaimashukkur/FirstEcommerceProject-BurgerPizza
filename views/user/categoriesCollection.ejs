    <style>
        /* Additional Styles for Featured Products */
        .featured {
            padding: 10px 0;
        }

        .section-title {
            margin-bottom: 10px;
        }

        .featured__filter {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }

        .featured__item {
            width: 250px;
            margin: 5px;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
            background-color: #fff;
        }

        .featured__item:hover {
            transform: translateY(-10px);
        }

        .featured__item__pic {
            position: relative;
            overflow: hidden;
            border-radius: 10px 10px 0 0;
        }

        .featured__item__pic img {
            display: block;
            width: 100%;
            height: auto;
            border-radius: 10px 10px 0 0;
        }

